<p id="notice"><%= notice %></p>

<h1>Scores</h1>

<table>
  <thead>
    <tr>
      <th>H1</th>
      <th>H2</th>
      <th>H17</th>
      <th>H18</th>
      <th>Golfer</th>
      <th>Tournament</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scores.each do |score| %>
      <tr>
        <td><%= score.h1 %></td>
        <td><%= score.h2 %></td>
        <td><%= score.h17 %></td>
        <td><%= score.h18 %></td>
        <td><%= score.golfer %></td>
        <td><%= score.tournament %></td>
        <td><%= link_to 'Show', score %></td>
        <td><%= link_to 'Edit', edit_score_path(score) %></td>
        <td><%= link_to 'Destroy', score, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

